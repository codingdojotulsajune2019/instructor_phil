@{
    ViewData["Title"] = "Dojo Dachi";
}

<div class="col-10 offset-2">
    <div class="row">
        <div class="col">
            <h2>Happiness: @Model.Happiness</h2>
        </div>
        <div class="col">
            <h2>Fullness: @Model.Fullness</h2>
        </div>
        <div class="col">
            <h2>Energy: @Model.Energy</h2>
        </div>
        <div class="col">
            <h2>Meals: @Model.Meals</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-4 offset-4">
            @{
                if(ViewBag.FormAction != null && ViewBag.Result == null)
                {
                    <p>@ViewBag.FormAction</p>
                } else {
                    if(ViewBag.Result == true)
                    {
                        <p>Your Dojo Dachi has won!!!!</p>
                        <a class="btn btn-danger" href="/restart">Restart</a>
                    }
                    if(ViewBag.Result == false)
                    {
                        <p>Your Dojo Dachi has passed away :(</p>
                        <a class="btn btn-danger" href="/restart">Restart</a>
                    }
                }
            }
        </div>
    </div>
    @{if(ViewBag.Result == null)
        {
            <div class="row">
                <div class="col">
                    <form action="/dachi_play/feed" method="post">
                        <button class="btn btn-primary">Feed</button>
                    </form>
                </div>
                <div class="col">
                    <form action="/dachi_play/play" method="post">
                        <button class="btn btn-primary">Play</button>
                    </form>
                </div>
                <div class="col">
                    <form action="/dachi_play/work" method="post">
                        <button class="btn btn-primary">Work</button>
                    </form>
                </div>
                <div class="col">
                    <form action="/dachi_play/sleep" method="post">
                        <button class="btn btn-primary">Sleep</button>
                    </form>
                </div>
            </div>
        }
    }
        </div>